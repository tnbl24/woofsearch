<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="807dp"
  android:background="@drawable/drawable_shape">
  
  <ImageView
    android:id="@+id/home_snapedit"
    android:layout_width="237dp"
    android:layout_height="239dp"
    android:layout_marginLeft="77dp"
    android:layout_marginTop="93dp"
    android:layout_gravity="top|left"
    android:scaleType="centerInside"
    android:src="@drawable/home_snapedit" />
  
  <ImageView
    android:id="@+id/home_rectangle1"
    android:layout_width="300dp"
    android:layout_height="70dp"
    android:layout_marginLeft="46dp"
    android:layout_marginTop="485dp"
    android:layout_gravity="top|left"
    android:scaleType="centerInside"
    android:src="@drawable/home_rectangle1" />
  
  <ImageView
    android:id="@+id/home_rectangle2"
    android:layout_width="300dp"
    android:layout_height="70dp"
    android:layout_marginLeft="45dp"
    android:layout_marginTop="577dp"
    android:layout_gravity="top|left"
    android:scaleType="centerInside"
    android:src="@drawable/home_rectangle2" />
  
  <TextView
    android:id="@+id/home_dang_nhap"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_marginLeft="142dp"
    android:layout_marginTop="507.5dp"
    android:layout_marginBottom="-0.5dp"
    android:layout_gravity="top|left"
    android:gravity="left|center_vertical"
    android:includeFontPadding="false"
    android:maxLines="1"
    android:singleLine="true"
    android:text="Đăng Nhập"
    android:textColor="#FFFFFFFF"
    android:textSize="20dp" />
  
  <TextView
    android:id="@+id/home_dang_ky"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_marginLeft="156dp"
    android:layout_marginTop="599.5dp"
    android:layout_marginBottom="-0.5dp"
    android:layout_gravity="top|left"
    android:gravity="left|center_vertical"
    android:includeFontPadding="false"
    android:maxLines="1"
    android:singleLine="true"
    android:text="Đăng Ký"
    android:textColor="#FF000000"
    android:textSize="20dp" />

  <TextView
      android:id="@+id/home_cho_la_ban"
      android:layout_width="316dp"
      android:layout_height="49dp"
      android:layout_gravity="top|left"
      android:layout_marginLeft="38dp"
      android:layout_marginTop="298.5dp"
      android:layout_marginBottom="-1.5dp"
      android:gravity="center_horizontal|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Chó là bạn, không phải tôi!&quot;"
      android:textColor="#FF000000"
      android:textSize="25dp" />
</FrameLayout>
