<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="807dp"
  android:background="@drawable/bai_viet_vi_pham_drawable_shape">
  
  <ImageView
    android:id="@+id/bai_viet_vi_pham_container_group"
    android:layout_width="393dp"
    android:layout_height="101dp"
    android:layout_gravity="top|left"
    android:scaleType="centerInside"
    android:src="@drawable/bai_viet_vi_pham_container_group" />

  <Button
      android:id="@+id/btnphandoi"
      android:layout_width="164dp"
      android:layout_height="51dp"
      android:layout_alignParentStart="true"
      android:layout_marginLeft="22dp"
      android:layout_marginTop="736dp"
      android:background="@drawable/button_background"
      android:text="Phản đối"
      android:textColor="#020000"
      app:backgroundTint="@null"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnok"
      android:layout_width="164dp"
      android:layout_height="51dp"
      android:layout_alignParentStart="true"
      android:layout_marginLeft="202dp"
      android:layout_marginTop="736dp"
      android:background="@drawable/button_background"
      android:text="OK"
      android:textColor="#020000"
      app:backgroundTint="@null"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  
  <FrameLayout
    android:id="@+id/bai_viet_vi_pham_container_group2"
    android:layout_width="178dp"
    android:layout_height="62.25dp"
    android:layout_marginLeft="14dp"
    android:layout_marginTop="199.84dp"
    android:layout_gravity="top|left">
    
    <TextView
      android:id="@+id/text_your_name"
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:layout_marginLeft="65dp"
      android:layout_marginTop="4.16dp"
      android:layout_marginBottom="-2dp"
      android:layout_gravity="top"
      android:gravity="left|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Your name"
      android:textColor="#FF000000"
      android:textSize="20dp" />
    
    <TextView
      android:id="@+id/text_time_ago"
      android:layout_width="match_parent"
      android:layout_height="15dp"
      android:layout_marginLeft="65dp"
      android:layout_marginRight="30dp"
      android:layout_marginTop="28.16dp"
      android:layout_marginBottom="19.09dp"
      android:gravity="left|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="4 giờ trước"
      android:textColor="#FF000000"
      android:textSize="11dp" />
    
    <ImageView
      android:id="@+id/bai_viet_vi_pham_image_ellipse"
      android:layout_width="62.45dp"
      android:layout_height="match_parent"
      android:layout_marginTop="0dp"
      android:layout_marginBottom="0dp"
      android:layout_gravity="left"
      android:scaleType="centerCrop"
      android:src="@drawable/bai_viet_vi_pham_image_ellipse" />
  </FrameLayout>
  
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:layout_marginLeft="17dp"
    android:layout_marginTop="264dp"
    android:layout_marginBottom="-1dp"
    android:layout_gravity="top|left"
    android:gravity="left|center_vertical"
    android:includeFontPadding="false"
    android:maxLines="1"
    android:singleLine="true"
    android:text="Đây là nội dung của bài viết"
    android:textColor="#FF000000"
    android:textSize="15dp" />
  
  <TextView
    android:layout_width="347dp"
    android:layout_height="72dp"
    android:layout_marginLeft="22dp"
    android:layout_marginTop="105dp"
    android:layout_gravity="top|left"
    android:gravity="left|top"
    android:includeFontPadding="false"
    android:lineHeight="17.58dp"
    android:text="Không ai khác có thể nhìn thấy bài viết của bạn. Chúng tôi đặt ra các tiêu chuẩn này để ngăn chặn những nội dung như quảng cáo sai lệch, lừa đảo và vi phạm bảo mật."
    android:textColor="#FF000000"
    android:textSize="15dp" />
  
  <ImageView
    android:layout_width="393dp"
    android:layout_height="229dp"
    android:layout_marginTop="300dp"
    android:layout_gravity="top|left"
    android:scaleType="centerInside"
    android:src="@drawable/bai_viet_vi_pham_drawable_image" />
  
  <TextView
    android:layout_width="322dp"
    android:layout_height="46dp"
    android:layout_marginLeft="47dp"
    android:layout_marginTop="39dp"
    android:layout_gravity="top|left"
    android:gravity="left|top"
    android:includeFontPadding="false"
    android:lineHeight="23.44dp"
    android:text="Bài viết của bạn đã vi phạm Tiêu chuẩn cộng đồng về spam"
    android:textColor="#FFFFFFFF"
    android:textSize="20dp" />
  
  <ImageView
    android:layout_width="27dp"
    android:layout_height="25dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="40dp"
    android:layout_gravity="top|left"
    android:scaleType="centerInside"
    android:src="@drawable/bai_viet_vi_pham_drawable_image_1" />
</FrameLayout>
