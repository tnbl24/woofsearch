<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="807dp"
  android:background="@drawable/binh_luan_vi_pham_true_drawable_shape">
  
  <ImageView
    android:id="@+id/binh_luan_vi_pham_true_container_group"
    android:layout_width="393dp"
    android:layout_height="82dp"
    android:layout_gravity="top|left"
    android:scaleType="centerInside"
    android:src="@drawable/binh_luan_vi_pham_true_container_group" />
  
  <TextView
    android:id="@+id/text_cancel_comment_decision"
    android:layout_width="250dp"
    android:layout_height="25dp"
    android:layout_marginLeft="0.5dp"
    android:layout_marginTop="41dp"
    android:layout_marginBottom="-1dp"
    android:layout_gravity="center_horizontal"
    android:gravity="left|center_vertical"
    android:includeFontPadding="false"
    android:maxLines="1"
    android:singleLine="true"
    android:text="Hủy bỏ phản đối quyết định"
    android:textColor="#FFFFFFFF"
    android:textSize="20dp" />
  
  <ImageView
    android:id="@+id/binh_luan_vi_pham_true_image_frame"
    android:layout_width="27dp"
    android:layout_height="25dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="40dp"
    android:layout_gravity="top|left"
    android:scaleType="centerInside"
    android:src="@drawable/binh_luan_vi_pham_true_image_frame" />
  
  <FrameLayout
    android:id="@+id/binh_luan_vi_pham_true_container_group1"
    android:layout_width="50dp"
    android:layout_height="49.45dp"
    android:layout_marginLeft="11dp"
    android:layout_marginTop="221.55dp"
    android:layout_gravity="top|left">
    
    <ImageView
      android:id="@+id/binh_luan_vi_pham_true_image_ellipse"
      android:layout_width="50dp"
      android:layout_height="49.45dp"
      android:layout_marginLeft="0dp"
      android:layout_marginRight="0dp"
      android:layout_marginBottom="0dp"
      android:scaleType="centerInside"
      android:src="@drawable/binh_luan_vi_pham_true_image_ellipse" />
  </FrameLayout>
  
  <ImageView
    android:id="@+id/binh_luan_vi_pham_true_image_rectangle"
    android:layout_width="298dp"
    android:layout_height="92dp"
    android:layout_marginLeft="73dp"
    android:layout_marginTop="221dp"
    android:layout_gravity="top|left"
    android:background="@drawable/binh_luan_vi_pham_true_image_rectangle"
    android:scaleType="centerInside" />
  
  <TextView
    android:id="@+id/text_your_name"
    android:layout_width="wrap_content"
    android:layout_height="25dp"
    android:layout_marginLeft="80dp"
    android:layout_marginTop="228dp"
    android:layout_marginBottom="-1dp"
    android:layout_gravity="top|left"
    android:gravity="left|center_vertical"
    android:includeFontPadding="false"
    android:maxLines="1"
    android:singleLine="true"
    android:text="Your name"
    android:textColor="#FF000000"
    android:textSize="20dp" />
  
  <TextView
    android:id="@+id/text_comment_content"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:layout_marginLeft="80dp"
    android:layout_marginTop="252dp"
    android:layout_marginBottom="-1dp"
    android:layout_gravity="top|left"
    android:gravity="left|center_vertical"
    android:includeFontPadding="false"
    android:maxLines="1"
    android:singleLine="true"
    android:text="Nội dung bình luận ở đây"
    android:textColor="#FF000000"
    android:textSize="15dp" />

  <ImageView
      android:layout_width="345dp"
      android:layout_height="1dp"
      android:layout_gravity="top|left"
      android:layout_marginLeft="26dp"
      android:layout_marginTop="194.5dp"
      android:background="#2196F3"
      android:scaleType="centerInside"
      android:src="@drawable/binh_luan_vi_pham_true_drawable_image" />
  
  <TextView
    android:id="@+id/text_confirm_comment_violation"
    android:layout_width="343dp"
    android:layout_height="90dp"
    android:layout_marginLeft="28dp"
    android:layout_marginTop="93dp"
    android:layout_gravity="top|left"
    android:gravity="left|top"
    android:includeFontPadding="false"
    android:lineHeight="17.58dp"
    android:text="Chúng tôi đã xác nhận lại bình luận của bạn và nhận thấy bình luận đã vi phạm tiêu chuẩn cộng đồng của chúng tôi về spam. Do đó chúng tôi sẽ ẩn bình luận của bạn đối với mọi người. Không ai khác có thể nhìn thấy bình luận của bạn."
    android:textColor="#FF000000"
    android:textSize="15dp" />

  <Button
      android:id="@+id/btnok"
      android:layout_width="359dp"
      android:layout_height="51dp"
      android:layout_gravity="top|center_horizontal"
      android:layout_alignParentStart="true"
      android:layout_marginTop="736dp"
      android:background="@drawable/button_background"
      android:text="OK"
      android:textColor="#020000"
      app:backgroundTint="@null"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  
  <TextView
    android:id="@+id/text_hours_ago"
    android:layout_width="wrap_content"
    android:layout_height="17dp"
    android:layout_marginLeft="80dp"
    android:layout_marginTop="324dp"
    android:layout_marginBottom="-1dp"
    android:layout_gravity="top|left"
    android:gravity="left|center_vertical"
    android:includeFontPadding="false"
    android:maxLines="1"
    android:singleLine="true"
    android:text="4 giờ trước"
    android:textColor="#FF000000"
    android:textSize="13dp" />
</FrameLayout>
