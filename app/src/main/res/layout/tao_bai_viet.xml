<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="807dp"
    android:background="@drawable/tao_bai_viet_drawable_shape"
    android:id="@+id/add_post_layout">

  <Button
      android:id="@+id/add_post_btn"
      android:layout_width="370dp"
      android:layout_height="51dp"
      android:layout_gravity="top|center_horizontal"
      android:layout_alignParentStart="true"
      android:layout_marginTop="730dp"
      android:background="@drawable/button_background"
      android:text="Đăng bài"
      android:textColor="#020000"
      app:backgroundTint="@null"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />



  <ImageView
      android:id="@+id/tao_bai_viet_container_group"
      android:layout_width="393dp"
      android:layout_height="90dp"
      android:layout_gravity="top|left"
      android:scaleType="centerInside"
      android:src="@drawable/tao_bai_viet_container_group" />

  <ImageView
      android:id="@+id/add_post_back"
      android:layout_width="27dp"
      android:layout_height="25dp"
      android:layout_gravity="top|left"
      android:layout_marginLeft="25dp"
      android:layout_marginTop="48dp"
      android:scaleType="centerInside"
      android:clickable="true"
      android:src="@drawable/tao_bai_viet_container_frame" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="32dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="47dp"
      android:layout_marginBottom="-1dp"
      android:gravity="center_horizontal|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Tạo bài viết"
      android:textColor="#FFFFFFFF"
      android:textSize="26dp" />



  <FrameLayout
      android:id="@+id/add_post_noi_dung"
      android:layout_width="370dp"
      android:layout_height="257dp"
      android:layout_gravity="top|left"
      android:layout_marginLeft="11dp"
      android:layout_marginTop="123dp"
      android:background="@drawable/tao_bai_viet_drawable_shape_2"
      android:scaleType="centerInside">
    <EditText
        android:id="@+id/tao_bai_viet_noi_dung"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:layout_marginTop="13dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Bạn viết gì đi ..."
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="top"/>
  </FrameLayout>
  <FrameLayout
      android:id="@+id/add_post_image"
      android:layout_width="370dp"
      android:layout_height="60dp"
      android:layout_gravity="top|left"
      android:layout_marginLeft="11dp"
      android:layout_marginTop="405dp"
      android:background="@drawable/tao_bai_viet_container_group3">

    <ImageView
        android:id="@+id/tao_bai_viet_image_rectangle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tao_bai_viet_image_rectangle"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text_hinh_anh"
        android:layout_width="79.05dp"
        android:layout_height="25.71dp"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="15.29dp"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Hình ảnh"
        android:textColor="#FF000000"
        android:textSize="18dp" />
        <ImageView
            android:id="@+id/tao_bai_viet_image_group"
            android:layout_width="38.35dp"
            android:layout_height="29.25dp"
            android:layout_marginLeft="17.89dp"
            android:layout_marginTop="18.68dp"
            android:layout_marginRight="313.76dp"
            android:layout_marginBottom="12.06dp"
            android:scaleType="centerInside"
            android:src="@drawable/tao_bai_viet_image_group" />
  </FrameLayout>

  <FrameLayout
      android:id="@+id/add_post_video"
      android:layout_width="370dp"
      android:layout_height="60dp"
      android:layout_gravity="top|left"
      android:layout_marginLeft="11dp"
      android:layout_marginTop="492dp"
      android:background="@drawable/tao_bai_viet_container_group3">

    <ImageView
        android:id="@+id/add_video_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tao_bai_viet_image_rectangle2"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text_video"
        android:layout_width="79.05dp"
        android:layout_height="25.71dp"
        android:layout_gravity="left"
        android:layout_marginLeft="46.11dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="15.29dp"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Video"
        android:textColor="#FF000000"
        android:textSize="18dp" />
  </FrameLayout>

  <FrameLayout
      android:id="@+id/add_post_icon"
      android:layout_width="370dp"
      android:layout_height="60dp"
      android:layout_gravity="top|left"
      android:layout_marginLeft="11dp"
      android:layout_marginTop="578dp"
      android:background="@drawable/tao_bai_viet_container_group2">

    <ImageView
        android:id="@+id/tao_bai_viet_image_rectangle1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tao_bai_viet_image_rectangle1"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text_emoticon"
        android:layout_width="186.65dp"
        android:layout_height="26dp"
        android:layout_gravity="left"
        android:layout_marginLeft="53.8dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Biểu tượng cảm xúc"
        android:textColor="#000000"
        android:textSize="18dp" />
  </FrameLayout>

  <ImageView
      android:id="@+id/tao_bai_viet_container_frame1"
      android:layout_width="28dp"
      android:layout_height="26dp"
      android:layout_gravity="top|left"
      android:layout_marginLeft="34dp"
      android:layout_marginTop="509dp"
      android:scaleType="centerInside"
      android:src="@drawable/tao_bai_viet_container_frame1" />

  <ImageView
      android:id="@+id/tao_bai_viet_container_frame2"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_gravity="top|left"
      android:layout_marginLeft="33dp"
      android:layout_marginTop="593dp"
      android:scaleType="centerInside"
      android:src="@drawable/tao_bai_viet_container_frame2" />

  <ImageView
      android:layout_width="393dp"
      android:layout_height="591dp"
      android:layout_gravity="top|left"
      android:layout_marginTop="104dp"
      android:background="@drawable/tao_bai_viet_drawable_layer"
      android:scaleType="centerInside" />
</FrameLayout>
